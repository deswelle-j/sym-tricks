{% extends 'base.html.twig' %}

{% block title %}Hello TrickController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <ul>
        <li>Id du trick: {{ trick.id }}</li>
        <li>Titre: {{ trick.title }}</li>
        <li>description: {{ trick.description }}</li>
        <li>date de modification: {{ trick.modificationdate |date("m/d/Y")}}</li>
    </ul>

    <ul>
        {% for image in trick.images %}
            <li>
                <img class="d-block w-100" src="{{asset('/uploads/' ~ image.url)}}" alt="First slide">
            </li>

        {% endfor %}                
        </div>
    <ul>

    {% if trick.comments|length > 0 %}
        <h2>Commentaire</h2>

        {% for comment in trick.comments %}
            <div>
                <strong>{{ comment.author.username }}</strong> a dit :
                <blockquote>
                    {{ comment.content }}
                </blockquote>
            </div>

        {% endfor %}
    {% else %}

    {% endif %}

    {% if is_granted('ROLE_USER') %}
    <div class="example-wrapper">
        <h1>Laissez nous un commentaire</h1>

        {{ form_start(form) }}
        {{ form_widget(form)}}
        <button type="submit">Envoyer</button>
        {{ form_end(form)}}
        </div>
    </div>
    {% endif %}
{% endblock %}
