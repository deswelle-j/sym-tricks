{% extends 'base.html.twig' %}

{% block title %}Changement du mot de passe{% endblock %}

{% block body %}
    <div class="page-header header-filter" filter-color="blue">
        <div class="page-header-image" style="background-image:url({{asset('/assets/snowboarding-1734841_1920.jpg')}})">
        </div>
        <div class="content">
            <div class="container">
                <div class="col-md-5 ml-auto mr-auto">
                    <div class="card card-login card-plain">
                        {{ form_start(form) }}
                            <div class="card-header text-center">
                                <div class="logo-container">
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="input-group no-border input-lg">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="now-ui-icons users_circle-08"></i>
                                        </span>
                                    </div>
                                    <span class="form-control text-light">Entrez votre nouveau mot de passe</span>
                                </div>
                                <div class="input-group no-border input-lg">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="now-ui-icons objects_key-25"></i>
                                        </span>
                                    </div>
                                    {{ form_errors(form.hash) }}
                                    {{ form_widget(form.hash, {'attr': {'class': 'form-control', 'placeholder':"Nouveau mot de passe..."}}) }}
                                </div>
                                <div class="input-group no-border input-lg">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="now-ui-icons objects_key-25"></i>
                                        </span>
                                    </div>
                                    {{ form_errors(form.passwordConfirm) }}
                                    {{ form_widget(form.passwordConfirm, {'attr': {'class': 'form-control', 'placeholder':"Confirmation du Mot de passe..."}}) }}
                                </div>
                                <div class="input-group no-border input-lg">
                                </div>
                            </div>
                            <div class="card-footer text-center">
                                <button class="btn btn-lgbtn btn-primary btn-round btn-lg btn-block" type="submit">Envoyer</button>
                            </div>
                            <div class="pull-left"></div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}